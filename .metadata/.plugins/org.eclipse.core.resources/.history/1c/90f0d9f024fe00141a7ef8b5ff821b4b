public class Solution {
	public int[][] generateMatrix(int n) {
		int [][] matrix = new int[n][n];
		int steps = 0;
		int k;
		for (int i = n; i > 0; i = i - 2) {
			int length = i-1;
			int index = (n - i)/2 + 1;
			
			for (k = index; k < length + index; k++) {
				matrix[index][k] = steps;
				steps++;
			}
			
			for (k=index; k<length + index; k++) {
				matrix[][] = steps;
				steps++;
			}
			
		}
		
		
		return matrix;
	}
}
