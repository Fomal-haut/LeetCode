public class Solution {
	public static int minIndex;
	public static int maxIndex;
	
	public int[] searchRange(int[] nums, int target) {
		minIndex = nums.length;
		maxIndex = -1;
	}
	
	public int[] binarySearch(int firstIndex, int lastIndex, int target, int[] nums) {
		if (firstIndex == lastIndex) {
			if (nums[firstIndex] == target) {
				return firstIndex;
			} else {
				return -1;
			}
			
		} else {
			int a = binarySearch(firstIndex, lastIndex/2, target, nums);
			if ( a != -1 && a< minIndex) {
				minIndex = a;
			}
			int b = binarySearch(lastIndex/2 + 1, lastIndex, target, nums);
			if ( b !=-1 && b > maxIndex) {
				maxIndex = b;
			}
		}
	}
}
